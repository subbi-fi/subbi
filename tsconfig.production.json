{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "outFile": "dist/index.d.ts",
    "emitDeclarationOnly": true,
    "declaration": true,
    "baseUrl": "./src",
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/stories/**/*",
    "./src/index.ts",
    "./src/components/index.ts",
    "./src/hooks/index.ts",
    "./src/components/**/styles.ts"
  ]
}